PORT=4000
DATABASE_URL=\"mysql://user:password@localhost:3306/wppconnect_platform\"
SESSION_SECRET=change-me-with-secure-random-key
SESSION_COOKIE_NAME=wppconnect.sid
SESSION_MAX_AGE=43200000
SESSION_CLEANUP_INTERVAL=60000
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=lax
CORS_ORIGIN=http://localhost:5173
WPP_HEADLESS=true
WPP_AUTO_CLOSE=60000
AUTO_CLOSE_MINUTES=30
SCHEDULER_INTERVAL_MS=300000
AUTO_CLOSE_MESSAGE=🕒 Chat finalizado por inactividad

# SSL Configuration (Greenlock)
ENABLE_SSL=false
DOMAIN_NAME=localhost
EMAIL=admin@example.com
STAGING=true
GREENLOCK_CONFIG_DIR=./greenlock.d

# PRODUCTION NOTES:
# 1. DATABASE_URL: Reemplaza con credenciales reales de producción
# 2. SESSION_SECRET: Genera con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# 3. CORS_ORIGIN: Cambia a tu dominio de producción
# 4. SESSION_COOKIE_SECURE: Cambiar a true en HTTPS
# 5. ENABLE_SSL: Cambiar a true para habilitar SSL automático
# 6. DOMAIN_NAME: Tu dominio real (ej: api.tudominio.com)
# 7. EMAIL: Email para registro Let's Encrypt
# 8. STAGING: false en producción para certificados reales
# 5. WPP_HEADLESS: Mantener en true para producción
