{
  "name": "wppconnect-platform-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --esm src/index.ts",
    "build": "tsc && tsc-alias && ts-add-js-extension --dir=dist",
    "start": "node dist/index.js",
    "setup-ssl": "node setup-ssl.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "sync:db": "prisma db push && prisma generate",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "seed:test-user": "node --loader ts-node/esm scripts/create-test-user.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@root/greenlock-express": "^4.0.4",
    "@wppconnect-team/wppconnect": "^1.37.5",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-session": "^1.18.2",
    "node-fetch": "^3.3.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/morgan": "^1.9.7",
    "@types/node": "^22.17.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.32.0",
    "prisma": "^6.18.0",
    "ts-add-js-extension": "^1.6.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
