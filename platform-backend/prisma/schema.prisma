generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      Role      @default(USER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  sessions  BotSession[]
  flows     Flow[]
  messages  Message[]
}

model BotSession {
  id          Int       @id @default(autoincrement())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  status      BotStatus @default(DISCONNECTED)
  connectedAt DateTime?
  paused      Boolean   @default(false)
  displayName String?   @db.VarChar(100)
  phoneNumber String?   @db.VarChar(32)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  lastQr      String?   @db.LongText

  @@unique([userId])
}

model Flow {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  keyword   String   @db.VarChar(191)
  response  String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Message {
  id        Int          @id @default(autoincrement())
  user      User         @relation(fields: [userId], references: [id])
  userId    Int
  contact   String       @db.VarChar(191)
  body      String       @db.Text
  type      MessageType
  createdAt DateTime     @default(now())
}

enum Role {
  ADMIN
  USER
}

enum BotStatus {
  CONNECTED
  CONNECTING
  DISCONNECTED
  ERROR
}

enum MessageType {
  IN
  OUT
}
